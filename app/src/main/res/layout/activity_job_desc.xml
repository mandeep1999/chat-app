<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_gravity=""
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/student_item_photo"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="8dp"
        android:src="@drawable/logo"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        app:cardMaxElevation="12dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        app:civ_border_color="@color/indigo"
        app:civ_border_width="2dp" />

    <TextView
                    android:id="@+id/jobTitle"
                    android:layout_width="255dp"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:text="Accountant"
                    android:textAlignment="center"
                    android:textColor="@color/indigo"
                    android:layout_marginBottom="10dp"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/jobLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Location : Bengaluru"
                    android:textSize="20sp"
                    android:layout_marginBottom="5dp"
                    android:textAlignment="center"
                    android:textColor="@color/grey" />

                <TextView
                    android:id="@+id/applyBy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Apply By : 6 June"
                    android:textSize="20sp"
                    android:layout_marginBottom="5dp"
                    android:textAlignment="center"
                    android:textColor="@color/grey" />

            <TextView
                android:id="@+id/jobSalary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Salary : 20k/month"
                android:textSize="20sp"
                android:layout_marginBottom="35dp"
                android:textAlignment="center"
                android:textColor="@color/grey" />

    <Button
        android:id="@+id/chatButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="64dp"
        android:text="@string/chat"
        android:minWidth="200dp"
        android:background="@drawable/rounded_button_color"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

</LinearLayout>



